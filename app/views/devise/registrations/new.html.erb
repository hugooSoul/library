<div class="container">
  <div class="row">
    <div class="form_box">

      <h2>Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name, required: true, autofocus: true, label: false, placeholder: "Name" %>

          <%= f.input :last_name, required: true, label: false, placeholder: "Last Name(s)" %>

          <%= f.input :email, required: true, label: false, placeholder: "Email" %>

          <%= f.input :password, required: true, label: false, placeholder: "Password (#{@minimum_password_length} characters minimum)" %>

          <%= f.input :password_confirmation, required: true, label: false, placeholder: "Password Confirmation" %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: "btn btn-md btn-success" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>


    </div>
  </div>
</div>
