<div class="container">
  <div class="row">
    <div class="form_box">

      <h2>Add a New Book</h2>

      <%= simple_form_for(@book, html: { class: 'form-horizontal' }) do |f| %>
        <%= f.input :name, label: false, placeholder: "Book Title" %>

        <%= f.input :author, label: false, placeholder: "Enter the Author" %>

        <%= f.collection_select(:category, Category.all, :name, :name, :prompt => "Choose a Category") %>

        <%= f.input :published_date, :as => :date, label: "Publication Date", html5: true %>

        <div class="actions text-center">
          <%= f.button :submit, class: "btn btn-md btn-success" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
