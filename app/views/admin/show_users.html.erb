<div class="container">
  <div class="row">
    <table class="table table-bordered table-responsive">

      <tr class="active">
        <th>ID</th>
        <th>Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>

      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td>
            <%= link_to "Delete", admin_destroy_user_path(user), method: :delete, data: { confirm: "You sure?" } %>
          </td>
        </tr>

      <% end %>

    </table>

  </div>
</div>
