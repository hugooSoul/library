<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
  <div class="container">
    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
      <% if @categories.exists? %>
        <%= link_to "Add Book", new_book_path, class: "btn btn-md btn-book " %>
      <% else %>
        <%= link_to "Add Book", new_book_path, class: "btn btn-md btn-book disabled" %>
        <p class="text-center notes">* Need to create a Category first</p>
      <% end %>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
      <%= link_to "Add Category", new_category_path, class: "btn btn-md btn-category" %>
    </div>
  </div>
</div>


<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
  <div class="container">
    <div class="row">
      <% if @books.exists? %>
        <br><br>
        <%= render 'table' %>
      <% else %>
      <p class='text-center search-face'>:(</p>
      <h3 class="text-center">You haven't register any book.</h3>
      <% end %>
    </div>
  </div>
</div>
