<div class="container">
  <div class="row">
    <table class="table table-bordered table-responsive">

      <tr class="active">
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>

      <% @categories.each do |c| %>
        <tr>
          <td><%= c.id %></td>
          <td><%= c.name %></td>
          <td><%= raw c.description %></td>
          <td>
            <%= link_to edit_category_path(c) do %>
              <i class="fa fa-pencil">edit</i>
            <% end %>
            <%= link_to category_path(c), method: :delete, data: {confirm: "Are you sure?"}  do %>
              <i class="fa fa-times">delete</i>
            <% end %>
          </td>
        </tr>

      <% end %>

    </table>

  </div>
</div>
