
<%= simple_form_for(@category, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.input :name, label: false, placeholder: "Category Name" %>
  <%= f.input :description, as: :wysihtml5, label: false, placeholder: "Enter the description" %>

  <div class="actions text-center">
    <%= f.button :submit, class: "btn btn-md btn-success" %>
  </div>
<% end %>
